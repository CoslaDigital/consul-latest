<h3><%= t("admin.llm.vendors.third_party_llm") %></h3>
<% if vendors.any? %>

  <table>
    <thead>
      <tr>
        <th><%= attribute_name(:name) %></th>
        <th><%= attribute_name(:api_key) %></th>
        <th><%= attribute_name(:model_endpoint) %></th>
        <th><%= t("admin.shared.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <%= render Admin::Llm::Vendors::RowComponent.with_collection(vendors) %>
    </tbody>
  </table>
<% else %>
  <div class="callout primary clear">
    <%= t("admin.llm.vendors.empty") %>
  </div>
<% end %>

<%= link_to t("admin.llm.vendors.create_button"), new_admin_llm_vendor_path, class: "button" %>
