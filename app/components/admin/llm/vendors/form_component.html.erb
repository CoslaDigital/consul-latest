<%= form_for [:admin, vendor], html: { class: "vendor-form" } do |f| %>
  <%= render "shared/errors", resource: vendor %>

  <%= f.select :name, options_from_collection_for_select(Llm::Vendor.supported_vendors, :name, :name, vendor.name), hint: t("admin.llm.vendors.form.name.help_text") %>
  <%= f.text_area :description, hint: t("admin.llm.vendors.form.description.help_text"), rows: 4 %>
  <%= f.text_field :api_key, hint: t("admin.llm.vendors.form.api_key.help_text") %>
  <%= f.text_field :model_endpoint, hint: t("admin.llm.vendors.form.model_endpoint.help_text") %>
  <%= f.text_area :script, hint: t("admin.llm.vendors.form.script.help_text"), rows: 10 %>

  <%= f.submit %>
<% end %>