<div class="feed-item event-item">

  <%# 1. DATE SECTION %>
  <div class="event-date">
    <% if date_object.present? %>
      <span class="day"><%= date_object.day %></span>
      <span class="month"><%= t("date.abbr_month_names")[date_object.month] %></span>
    <% end %>
  </div>

  <%# 2. DETAILS SECTION %>
  <div class="event-details">

    <%# FIX: Now we simply call 'title' and 'url' which are defined in the component class %>
    <h3><%= link_to title, url %></h3>

    <div class="event-meta">
      <span class="label secondary">
        <% if @event.is_a?(Budget) || @event.is_a?(Budget::Phase) %>
          <%= Budget.model_name.human %>

        <% elsif @event.is_a?(Legislation::Process) %>
          <%= Legislation::Process.model_name.human %>

        <% elsif @event.is_a?(Event) %>
          <%# Use custom type (Workshop, Meeting) or fallback %>
          <%= @event.respond_to?(:human_type) ? @event.human_type : "Manual Event" %>

        <% elsif defined?(Poll) && @event.is_a?(Poll) %>
          <%= Poll.model_name.human %>

        <% else %>
          <%= @event.class.model_name.human %>
        <% end %>
      </span>

      <%# Location Display (Only for Manual Events) %>
      <% if @event.respond_to?(:location) && @event.location.present? %>
        <span class="text-muted small" style="margin-left: 5px;">
          &bull; <%= @event.location %>
        </span>
      <% end %>
    </div>
  </div>
</div>
