<div class="calendar-container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Events Calendar</h1>

    <%= link_to new_event_path, class: "button button-primary" do %>
      Create Event
    <% end %>
  </div>

  <%= month_calendar(events: @calendar_items, attribute: :calendar_start) do |date, items| %>

    <div class="day-number"><%= date.day %></div>

    <% items.each do |item| %>
      <div class="event-bar <%= item.calendar_class %>">

        <%= link_to item.calendar_title, item.calendar_link_url, class: "event-link text-white" %>

        <% if item.is_a?(Event) %>
          <div class="event-actions float-end">
            <%= link_to "Edit", edit_event_path(item), class: "text-white small me-1" %>

            <%= link_to "x", event_path(item),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "text-white small" %>
          </div>
        <% end %>

      </div>
    <% end %>

  <% end %>
</div>
