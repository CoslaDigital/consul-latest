<div class="row">
  <div class="small-12 medium-8 medium-offset-2 columns">

    <header class="margin-bottom">
      <h1 class="h2"><%= @event.name %></h1>
      <span class="label secondary">Manual Event</span>
    </header>

    <div class="callout">

      <div class="grid-x grid-margin-x margin-bottom">
        <div class="cell medium-6">
          <strong class="text-muted">Starts:</strong>
          <div>
            <%= l(@event.starts_at, format: :long) %>
          </div>
        </div>

        <% if @event.ends_at.present? %>
          <div class="cell medium-6">
            <strong class="text-muted">Ends:</strong>
            <div>
              <%= l(@event.ends_at, format: :long) %>
            </div>
          </div>
        <% end %>
      </div>

      <hr>

      <div class="event-description margin-top">
        <strong class="text-muted">Description:</strong>
        <%= simple_format @event.description %>
      </div>
    </div>

    <div class="actions margin-top">
      <%= link_to "Edit Event", edit_event_path(@event), class: "button primary" %>

      <%= link_to "Delete", event_path(@event),
                  class: "button alert hollow",
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this event?" } %>

      <%= link_to "Back to Calendar", events_path, class: "button secondary clear" %>
    </div>

  </div>
</div>
